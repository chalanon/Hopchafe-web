{
  "database": {
    "rules": "json/database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/admin",
        "destination": "/admin/index.html"
      },
      {
        "source": "/admin/login",
        "destination": "/admin/login.html"
      },
      {
        "source": "/admin/dashboard",
        "destination": "/admin/dashboard.html"
      },
      {
        "source": "/admin/order",
        "destination": "/admin/order.html"
      },
      {
        "source": "/menu",
        "destination": "/menu.html"
      },
      {
        "source": "/login",
        "destination": "/login.html"
      },
      {
        "source": "/register",
        "destination": "/register.html"
      },
      {
        "source": "/checkout",
        "destination": "/checkout.html"
      },
      {
        "source": "/profile",
        "destination": "/profile.html"
      },
      {
        "source": "/order_status",
        "destination": "/order_status.html"
      },
      {
        "source": "/order_history",
        "destination": "/order_history.html"
      },
      {
        "source": "/contact",
        "destination": "/contact.html"
      },
      {
        "source": "/images/**",
        "destination": "/images/**"
      },
      {
        "source": "/",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=86400"
          }
        ]
      }
    ]
  }
}
